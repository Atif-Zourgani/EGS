{% extends 'base.html.twig' %}

{% block title %}{{ section.name }}{% endblock %}
{% block metaDescriptionContent %}{% endblock %}

{% set bodyClass='section' %}
{% block body %}

    <div class="main">

        {% include 'common/_breadcrumbs.html.twig' %}

        <div class="main-scrollable">

            <ul class="flex flex--center flex--wrap cards-container">
                {% for student in section.students %}
                    {% if student.enabled == 1 %}
                        {{ include('cards/_student_card.html.twig') }}
                    {% endif %}
                {% endfor %}
            </ul>

        </div>
    </div>

{% endblock %}