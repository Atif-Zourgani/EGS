{% extends 'base.html.twig' %}

{% block title %}Les intervenants{% endblock %}
{% block metaDescriptionContent %}{% endblock %}

{% set bodyClass='teachers' %}
{% block body %}

    <div class="main">

        {% include 'common/_searchbar.html.twig' %}

        <div class="main-scrollable">

            <img id="loader" src="{{ asset('logos/loader-pacman.gif') }}" style="display: none"/>

            <div id="no-result"></div>

            <ul class="flex flex--wrap flex--center cards-container">
                {% for teacher in teachers %}
                    {{ include('cards/_teacher_card.html.twig') }}
                {% endfor %}
            </ul>

            {% if teachers|length > 50 %}
                <div id="load-more">Charger plus d'intervenants</div>
            {% endif %}
        </div>
    </div>

{% endblock %}